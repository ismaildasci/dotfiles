// Zellij layout for Laravel development
// Usage: zellij --layout ~/.config/zellij/layouts/laravel-dev.kdl

layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="compact-bar"
        }
        children
    }

    tab name="dev" focus=true {
        pane split_direction="vertical" {
            pane size="60%" {
                // Main editor/terminal
                name "editor"
                focus true
            }
            pane split_direction="horizontal" size="40%" {
                pane {
                    command "php"
                    args "artisan" "serve"
                    name "server"
                }
                pane {
                    command "php"
                    args "artisan" "queue:listen"
                    name "queue"
                }
                pane {
                    command "bun"
                    args "run" "dev"
                    name "vite"
                }
            }
        }
    }

    tab name="logs" {
        pane {
            command "php"
            args "artisan" "pail"
            name "pail"
        }
    }

    tab name="git" {
        pane {
            command "lazygit"
            name "lazygit"
        }
    }
}
