# Ghostty Terminal Configuration
# Nuno Maduro inspired setup + Claude Code optimized
# Location: ~/.config/ghostty/config

# Font - JetBrainsMono Nerd Font (Nuno's choice)
font-family = "JetBrainsMono Nerd Font"
font-size = 23
font-thicken = true

# Theme - Custom Claude Code inspired (dark with orange accents)
# Based on Catppuccin Mocha with Claude/Anthropic colors
background = #1a1b26
foreground = #c0caf5
cursor-color = #f9a825
selection-background = #33467c
selection-foreground = #c0caf5

# Claude Code accent colors (orange/amber tones)
palette = 0=#15161e
palette = 1=#f7768e
palette = 2=#9ece6a
palette = 3=#e0af68
palette = 4=#7aa2f7
palette = 5=#bb9af7
palette = 6=#7dcfff
palette = 7=#a9b1d6
palette = 8=#414868
palette = 9=#f7768e
palette = 10=#9ece6a
palette = 11=#e0af68
palette = 12=#7aa2f7
palette = 13=#bb9af7
palette = 14=#7dcfff
palette = 15=#c0caf5

# Window
window-padding-x = 16
window-padding-y = 12
window-decoration = true
macos-titlebar-style = native
window-save-state = always

# Background
background-opacity = 0.95
background-blur-radius = 20

# Cursor
cursor-style = block
cursor-style-blink = true
cursor-color = #f5e0dc
shell-integration-features = cursor

# Mouse
mouse-hide-while-typing = true
copy-on-select = clipboard

# Quick Terminal (dropdown terminal like Quake)
keybind = global:cmd+grave_accent=toggle_quick_terminal
quick-terminal-position = top
quick-terminal-screen = main
quick-terminal-animation-duration = 0.15

# Keybindings
keybind = cmd+t=new_tab
keybind = cmd+w=close_surface
keybind = cmd+shift+t=new_window
keybind = cmd+d=new_split:right
keybind = cmd+shift+d=new_split:down
keybind = cmd+opt+left=goto_split:left
keybind = cmd+opt+right=goto_split:right
keybind = cmd+opt+up=goto_split:top
keybind = cmd+opt+down=goto_split:bottom
keybind = cmd+shift+enter=toggle_split_zoom
keybind = cmd+equal=increase_font_size:1
keybind = cmd+minus=decrease_font_size:1
keybind = cmd+0=reset_font_size

# Clipboard
keybind = cmd+c=copy_to_clipboard
keybind = cmd+v=paste_from_clipboard

# Scrollback
scrollback-limit = 50000

# Bell - use bell-features to control behavior
# Options: audio, attention (dock bounce), title (emoji), border (visual flash)
# Prefix with 'no-' to disable, e.g., no-audio
bell-features = no-audio,attention,title

# macOS specific
macos-option-as-alt = true
macos-window-shadow = true
confirm-close-surface = false
quit-after-last-window-closed = false

# Shell integration
shell-integration = zsh

# Performance
gtk-single-instance = true
