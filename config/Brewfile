# Modern CLI replacements
brew "eza"          # ls replacement
brew "bat"          # cat replacement
brew "fd"           # find replacement
brew "ripgrep"      # grep replacement
brew "zoxide"       # smart cd
brew "fzf"          # fuzzy finder
brew "git-delta"    # better git diffs
brew "jq"           # JSON processor
brew "yq"           # YAML processor

# System monitoring
brew "btop"         # top/htop replacement
brew "dust"         # du replacement
brew "procs"        # ps replacement
brew "ncdu"         # disk usage analyzer
brew "duf"          # df replacement (disk usage)

# Development tools
brew "tokei"        # Code statistics
brew "hyperfine"    # Benchmarking tool

# Network tools
brew "mtr"          # traceroute alternative
brew "nmap"         # network scanner
brew "bandwhich"    # Bandwidth monitor by process
brew "doggo"        # DNS client (dig replacement) - 'dog' package no longer exists

# Security
brew "age"          # Modern encryption tool
brew "croc"         # Secure file transfer

# TUI tools
brew "lazygit"      # git TUI
