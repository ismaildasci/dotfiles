# PHP
alias phpunit="vendor/bin/phpunit"
alias a="php artisan"
alias ar="php artisan remote"
alias c="composer"
alias cu="composer update"
alias cr="composer require"
alias ci="composer install"
alias cda="composer dump-autoload -o"
alias hostfile="sudo vi /etc/hosts"
alias deploy='envoy run deploy'
alias deploy-code='envoy run deploy-code'
alias mfs='php artisan migrate:fresh --seed'
alias nah='git reset --hard;git clean -df'

alias pp="php artisan test --parallel"
alias sshconfig="vi ~/.ssh/config"
alias copykey='command cat ~/.ssh/id_ed25519.pub 2>/dev/null || command cat ~/.ssh/id_rsa.pub 2>/dev/null | pbcopy'
alias tunnel='herd share --subdomain=ismaildasci'

# JavaScript
alias jest="./node_modules/.bin/jest"

# Git
alias gc="git checkout"
alias gpo="git push origin"
alias gm="git merge"
alias uncommit="git reset --soft HEAD~1"

# Fast open (macOS: 'open', Linux/WSL: handled in .zshrc)
if [[ "$OSTYPE" == "darwin"* ]]; then
    alias o="open ."
    alias phpstorm='open -a ~/Applications/PhpStorm.app "`pwd`"'
fi

# List all files colorized in long format
alias l="ls -laF"

# Redis
alias flush-redis="redis-cli FLUSHALL"

# Show/hide hidden files in Finder (macOS only)
if [[ "$OSTYPE" == "darwin"* ]]; then
    alias show="defaults write com.apple.finder AppleShowAllFiles -bool true && killall Finder"
    alias hide="defaults write com.apple.finder AppleShowAllFiles -bool false && killall Finder"
fi

# IP addresses
alias ip="curl ifconfig.me/ip ; echo"
alias localip="ifconfig -a | grep -o 'inet6\? \(addr:\)\?\s\?\(\(\([0-9]\+\.\)\{3\}[0-9]\+\)\|[a-fA-F0-9:]\+\)' | awk '{ sub(/inet6? (addr:)? ?/, \"\"); print }'"

# Flush DNS cache (platform-specific)
if [[ "$OSTYPE" == "darwin"* ]]; then
    alias flushdns="sudo dscacheutil -flushcache; sudo killall -HUP mDNSResponder"
else
    alias flushdns="sudo systemd-resolve --flush-caches 2>/dev/null || sudo resolvectl flush-caches 2>/dev/null || echo 'DNS cache flush not available'"
fi

# Enable aliases to be sudoâ€™ed
alias sudo='sudo '

# Modern CLI tool aliases (conditional on installation)
if command -v eza &> /dev/null; then
    alias ls="eza --group-directories-first"
    alias l="eza -la --icons --group-directories-first"
    alias ll="eza -l --icons --group-directories-first"
    alias lt="eza --tree --level=2 --icons"
fi

if command -v bat &> /dev/null; then
    alias cat="bat --style=plain"
fi

if command -v rg &> /dev/null; then
    alias grep="rg"
fi

# System monitoring
if command -v btop &> /dev/null; then
    alias htop="btop"
    alias top="btop"
fi

if command -v dust &> /dev/null; then
    alias du="dust"
fi

if command -v procs &> /dev/null; then
    alias ps="procs"
fi

# TUI tools
if command -v lazygit &> /dev/null; then
    alias lg="lazygit"
fi

if command -v lazydocker &> /dev/null; then
    alias lzd="lazydocker"
fi

if command -v yazi &> /dev/null; then
    alias y="yazi"
fi

# Neovim
if command -v nvim &> /dev/null; then
    alias vim="nvim"
    alias vi="nvim"
    alias v="nvim"
fi
