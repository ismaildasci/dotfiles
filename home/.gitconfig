[core]
	excludesfile = /Users/ismail-dasci/.global-gitignore
	attributesfile = /Users/ismail-dasci/.global-gitattributes
	autocrlf = false
	pager = delta

[user]
	name = İsmail Daşcı
	email = dasci.info@gmail.com
	signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIOd4zgKsJm1yDquP2+Ca7nZqUiJ2aZNwxJHP9gg3teWQ

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process

[pull]
	rebase = false

[rebase]
	autoStash = true

[init]
	defaultBranch = main

[gpg]
	format = ssh

# SSH signing program (platform-specific):
# macOS: /Applications/1Password.app/Contents/MacOS/op-ssh-sign
# WSL2: /mnt/c/Users/USERNAME/AppData/Local/1Password/app/8/op-ssh-sign.exe
# To enable, uncomment the appropriate line and set gpgsign = true
[gpg "ssh"]
	# program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign

[commit]
	gpgsign = false

[push]
	autoSetupRemote = true

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true
	light = false
	side-by-side = true
	line-numbers = true

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default
[tag]
	gpgsign = false
